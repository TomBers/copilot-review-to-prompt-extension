{
  "name": "Copilot Review to Prompt",
  "description": "Extract and structure GitHub Copilot review comments on PR pages into a selectable prompt.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icons/copilot_llm_icon_16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/copilot_llm_icon_16.png",
    "48": "icons/copilot_llm_icon_48.png",
    "128": "icons/copilot_llm_icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*",
        "https://github.com/*/*/pull/*/*",
        "https://*.github.com/*/*/pull/*",
        "https://*.github.com/*/*/pull/*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "clipboardWrite"],
  "host_permissions": ["https://github.com/*", "https://*.github.com/*"]
}
